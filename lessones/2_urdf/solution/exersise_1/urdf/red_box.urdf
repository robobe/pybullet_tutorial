<?xml version="1.0"?>
<robot name="red_box">
    <link name="box_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <!-- Inertia for a uniform cube of side 1 and mass 1: I = 1/6 -->
            <inertia ixx="0.1666667" ixy="0" ixz="0" iyy="0.1666667" iyz="0" izz="0.1666667"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 1 1"/>
            </geometry>
            <material name="red_material">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
    </link>

    <material name="red_material">
        <color rgba="1 0 0 1"/>
    </material>
</robot>